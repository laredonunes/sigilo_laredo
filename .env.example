# ==========================================
# CONFIGURAÇÕES DE BANCO DE DADOS (PostgreSQL)
# ==========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret123
POSTGRES_DB=sigilo_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# URL de conexão para SQLAlchemy
# Para rodar localmente: postgresql://admin:secret123@localhost:5432/sigilo_db
# Para rodar no Docker: postgresql://admin:secret123@sigilo-postgres:5432/sigilo_db
DATABASE_URL=postgresql://admin:secret123@localhost:5432/sigilo_db

# ==========================================
# CONFIGURAÇÕES DE CACHE E FILAS (Redis/RabbitMQ)
# ==========================================
# Redis
# Para rodar localmente: redis://localhost:6379/0
# Para rodar no Docker: redis://sigilo-redis:6379/0
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=secret123
# Para rodar localmente: amqp://admin:secret123@localhost:5672//
# Para rodar no Docker: amqp://admin:secret123@sigilo-rabbitmq:5672//
CELERY_BROKER_URL=amqp://admin:secret123@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==========================================
# CONFIGURAÇÕES DE IA (Ollama)
# ==========================================
# Para rodar localmente: http://localhost:11434
# Para rodar no Docker: http://sigilo-ollama:11434
OLLAMA_URL=http://localhost:11434
MODEL_NAME=qwen2.5:1.5b-instruct

# ==========================================
# AUTENTICAÇÃO E SEGURANÇA (IAM)
# ==========================================
# Opções: mock, keycloak, google
AUTH_PROVIDER=mock

# --- Configurações Keycloak (Se AUTH_PROVIDER=keycloak) ---
# KEYCLOAK_URL=http://localhost:8080/auth
# KEYCLOAK_REALM=sigilo-realm
# KEYCLOAK_CLIENT_ID=sigilo-backend
# KEYCLOAK_CLIENT_SECRET=seu-client-secret

# --- Configurações Google (Se AUTH_PROVIDER=google) ---
# GOOGLE_CLIENT_ID=seu-client-id.apps.googleusercontent.com

# ==========================================
# CONFIGURAÇÕES GERAIS
# ==========================================
LOG_LEVEL=INFO
